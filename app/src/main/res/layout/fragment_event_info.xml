            <RelativeLayout
                android:id="@+id/sv_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </ScrollView>

    </RelativeLayout>

    <include layout="@layout/checkout_tickets_bottom_bar" />

</RelativeLayout>