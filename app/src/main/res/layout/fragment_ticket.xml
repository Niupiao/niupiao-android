<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/iv_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/qrcode"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_this_is_your_ticket"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_qrcode"
        android:text="@string/this_is_your_ticket"/>
    
    <TextView
        android:id="@+id/tv_ticket_type"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_this_is_your_ticket"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:text="@string/general_type"/>

    <TextView
        android:id="@+id/tv_ticket_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ticket_type"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:text="@string/ticket_name"/>

    <TextView
        android:id="@+id/tv_ticket_allow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ticket_name"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:text="@string/allows_for_entry_default"/>
</RelativeLayout>