<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="4">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:text="@string/ordered_on"
        android:textSize="14sp"
        android:layout_weight="1"
        android:textColor="@color/niupiao_grey_3"
        android:background="@drawable/thin_light_bottom_right_border"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:text="@string/ticket_info"
        android:textSize="14sp"
        android:layout_weight="1"
        android:textColor="@color/niupiao_grey_3"
        android:background="@drawable/thin_light_bottom_right_border"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:text="@string/event"
        android:textSize="14sp"
        android:layout_weight="1"
        android:textColor="@color/niupiao_grey_3"
        android:background="@drawable/thin_light_bottom_right_border"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:text="@string/options"
        android:textSize="14sp"
        android:layout_weight="1"
        android:textColor="@color/niupiao_grey_3"
        android:background="@drawable/thin_light_bottom_border"
        />

</LinearLayout>