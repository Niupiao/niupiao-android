<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView
        android:id="@+id/tv_number_tickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="-5dp"
        android:layout_marginTop="8dp"
        android:text="null"
        android:textSize="40sp"
        android:textColor="@color/niupiao_black_80"
        />

    <TextView
        android:id="@+id/tv_currency_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_cost"
        android:layout_alignTop="@id/tv_number_tickets"
        android:text="@string/usd"
        android:textSize="40sp"
        android:textColor="@color/niupiao_black_80"
        />

    <TextView
        android:id="@+id/tv_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@id/tv_number_tickets"
        android:layout_alignParentRight="true"
        android:text="null"
        android:textSize="40sp"
        android:textColor="@color/niupiao_black_80"
        />

    <TextView
        android:id="@+id/tv_purchasers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_number_tickets"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-5dp"
        android:text="null"
        android:textSize="20sp"
        android:textColor="@color/niupiao_black_80"
        />

</RelativeLayout>