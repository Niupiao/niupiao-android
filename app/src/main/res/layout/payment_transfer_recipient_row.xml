<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/payment_transfer_recipient_row"
    android:orientation="horizontal"
    android:weightSum="5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_recipient_number"
        style="@style/Payment.TextView.General"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:text="1" />

    <TextView
        android:id="@+id/tv_status"
        style="@style/Payment.TextView.General"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:text="@string/transfer_type_general" />

    <ImageButton
        android:id="@+id/ib_choose_contact"
        style="@style/Payment.ImageButton.Contacts"
        android:layout_gravity="center_vertical"
        android:layout_weight="4"/>

</LinearLayout>