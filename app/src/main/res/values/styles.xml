<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Payment"></style>
    
    <style name="Payment.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Payment.TextView.Title">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">35dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/niupiao_blue</item>
    </style>

    <style name="Payment.TextView.Category">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/niupiao_black</item>
    </style>

    <style name="Payment.TextView.General">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:textColor">@color/niupiao_blue</item>
    </style>

    <style name="Payment.TextView.VIP">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:textColor">@color/niupiao_orange</item>
    </style>

    <style name="Payment.TextView.Note">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:text">@string/transfer_note</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Payment.ImageButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Payment.ImageButton.Contacts">
        <item name="android:src">@drawable/blackline</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Login">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Login.ProgressBar" parent="android:Widget.ProgressBar.Large">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Login.Logo">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxHeight">200dp</item>
        <item name="android:src">@drawable/login_logo</item>
    </style>

    <style name="Login.RememberMe">
        <item name="android:hint">@string/remember_me</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Login.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Login.Button.Login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:background">@drawable/button_round_corner</item>
        <item name="android:text">@string/action_login</item>
        <item name="android:textColor">@color/niupiao_white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Login.Button.LoginFacebook">
        <item name="android:background">@drawable/facebook_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="Login.Button.Register">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:background">@drawable/button_transparent_right_border</item>
        <item name="android:text">@string/register</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Login.Button.ForgotPassword">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:text">@string/forgot_password</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="Login.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Login.Username" parent="Login.EditText">
        <item name="android:background">@drawable/edit_text_top_rounded</item>
        <item name="android:hint">@string/prompt_email</item>
    </style>

    <style name="Login.Password" parent="Login.EditText">
        <item name="android:background">@drawable/edit_text_bottom_rounded</item>
        <item name="android:hint">@string/prompt_password</item>
        <item name="android:imeActionLabel">@string/action_sign_in_short</item>
        <item name="android:imeOptions">actionUnspecified</item>
        <item name="android:inputType">textPassword</item>

    </style>


    <style name="EventInfo"></style>

    <style name="EventInfo.TicketCounterButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <style name="Events"></style>

    <style name="Events.Image">
        <item name="android:visibility">visible</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:contentDescription">Holds the image of each event</item>
    </style>

    <style name="Events.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Events.TextView.Divider">
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:text">|</item>
        <item name="android:textColor">@color/niupiao_white</item>
    </style>

    <style name="Events.TextView.Name">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/niupiao_orange</item>
    </style>

    <style name="Events.TextView.Time">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/niupiao_blue</item>
    </style>

    <style name="Events.TextView.Day">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/niupiao_white</item>
    </style>

    <style name="Events.TextView.Month">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/niupiao_white</item>
    </style>

    <style name="Events.TextView.General">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/niupiao_white</item>
    </style>

    <style name="Account"></style>

    <style name="Account.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Account.TextView.Name">
        <item name="android:textColor">@color/niupiao_black</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Account.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Account.Button.Settings">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@color/niupiao_orange</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
